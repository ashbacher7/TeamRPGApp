<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TeamRPGApp.ChoiceA">
    <ContentPage.Content>
        <StackLayout Padding="20"
                     Spacing="20">
            <Label Text="Choice A1" 
               HorizontalOptions="Center"
               FontSize="24"/>
            <Image/>
            <Button Text="Kill it in front of the android"
                VerticalOptions="EndAndExpand"
                x:Name="ChoiceAB"
                Clicked="ChoiceAB_Clicked"/>
            <Button Text="Let it go free"
                    x:Name="ChoiceAG"
                    Clicked="ChoiceAG_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>