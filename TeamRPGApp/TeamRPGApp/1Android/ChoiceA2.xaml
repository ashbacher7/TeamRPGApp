<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TeamRPGApp.Choice2A"
             BackgroundImage ="ChoiceA2.jpg">
    <ContentPage.Content>
        <StackLayout Padding="20"
                     Spacing="20">
            <Label Text="Choice A2" 
               HorizontalOptions="Center"
               FontSize="24"/>
    
            <Button Text="Show the company what the android can do"
                VerticalOptions="EndAndExpand"
                x:Name="ChoiceAB"
                Clicked="ChoiceAB_Clicked"/>
            <Button Text="Hide what the android can do"
                    x:Name="ChoiceAS"
                    Clicked="ChoiceAS_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>