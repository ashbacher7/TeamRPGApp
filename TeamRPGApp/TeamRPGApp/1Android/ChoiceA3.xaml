<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TeamRPGApp.Choice3A"
             BackgroundImage ="chioceA3.png">
    <ContentPage.Content>
        <StackLayout Padding="20"
                     Spacing="20">
            <Label Text="Choice A3" 
               HorizontalOptions="Center"
               FontSize="24"/>
           
            <Button Text="Teach the android to self-depend"
                VerticalOptions="EndAndExpand"
                x:Name="ChoiceAG"
                Clicked="ChoiceAG_Clicked"/>
            <Button Text="Teach the android to depend on you"
                    x:Name="ChoiceAS"
                    Clicked="ChoiceAS_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>