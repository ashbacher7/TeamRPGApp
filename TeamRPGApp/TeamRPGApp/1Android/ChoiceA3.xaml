<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TeamRPGApp.Choice3A">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Image/>

            <Button 
                Text=""
                VerticalOptions="EndAndExpand"
                x:Name="ChoiceAG"
                Clicked="ChoiceAG_Clicked"
                Grid.Row="1"
                Margin="25,0,25,0"
            />

            <Button 
                Text=""
