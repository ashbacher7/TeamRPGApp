<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TeamRPGApp.Choice3C">
    <ContentPage.Content>
        <StackLayout Padding="20"
                     Spacing="20">
            <Label Text="Choice C3" 
               HorizontalOptions="Center"
               FontSize="24"/>
            <Image/>
            <Button Text="Good Choice"
                VerticalOptions="EndAndExpand"
                x:Name="ChoiceCG"
                Clicked="ChoiceCG_Clicked"/>
            <Button Text="Selfish Choice"
                    x:Name="ChoiceCS"
                    Clicked="ChoiceCS_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>