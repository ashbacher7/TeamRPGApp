<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TeamRPGApp.ChoiceC">
    <ContentPage.Content>
        <StackLayout Padding="20"
                     Spacing="20">
            <Label Text="Choice C1" 
               HorizontalOptions="Center"
               FontSize="24"/>
            <Image/>
            <Button Text="Bad Choice"
                VerticalOptions="EndAndExpand"
                x:Name="ChoiceCB"
                Clicked="ChoiceCB_Clicked"/>
            <Button Text="Good Choice"
                    x:Name="ChoiceCG"
                    Clicked="ChoiceCG_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>