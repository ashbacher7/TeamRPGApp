<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TeamRPGApp.Intro.IntroChoice">
    <ContentPage.Content>
        <StackLayout Padding="30"
                     Spacing="100">

            <Label
                Text="Please choose the desired project"
                VerticalOptions="CenterAndExpand"
                HorizontalOptions="CenterAndExpand"
                Margin="0,0,0,0"
                FontSize="20"
            />

            <Button 
                Text="Android"
                VerticalOptions="EndAndExpand"
                x:Name="ChoiceA"
                Clicked="ChoiceA_Clicked"
            />
            <Button 
                Text="Cyber Reality"
                 x:Name="ChoiceB"
                 Clicked="ChoiceB_Clicked"
            />
            <Button 
                Text="Skeleton Key"
                 x:Name="ChoiceC"
                 Clicked="ChoiceC_Clicked"
            />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>