<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TeamRPGApp.Intro">
    <ContentPage.Content>
        <StackLayout Padding="20"
                     Spacing="20">
            <Label 
               Text="Introduction" 
               HorizontalOptions="Center"
               FontSize="24"
            />
            <Image/>
            <Button 
                Text="Choice A"
                VerticalOptions="EndAndExpand"
                x:Name="ChoiceA"
                Clicked="ChoiceA_Clicked"
            />
            <Button 
                Text="Choice B"
                 x:Name="ChoiceB"
                 Clicked="ChoiceB_Clicked"
            />
            <Button 
                Text="Choice C"
                 x:Name="ChoiceC"
                 Clicked="ChoiceC_Clicked"
            />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>