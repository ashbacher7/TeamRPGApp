<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TeamRPGApp.ChoiceA">
    <ContentPage.Content>
        <StackLayout Padding="20"
                     Spacing="20">
            <Label Text="Choice A" 
               HorizontalOptions="Center"
               FontSize="24"/>
            <Image/>
            <Button Text="Choice A"
                VerticalOptions="EndAndExpand"
                x:Name="ChoiceAA"
                Clicked="ChoiceAA_Clicked"/>
            <Button Text="Choice B"
                    x:Name="ChoiceBA"
                    Clicked="ChoiceBA_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>