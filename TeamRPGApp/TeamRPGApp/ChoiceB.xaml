<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TeamRPGApp.ChoiceB">
    <ContentPage.Content>
        <StackLayout Padding="20"
                     Spacing="20">
            <Label Text="Choice B" 
               HorizontalOptions="Center"
               FontSize="24"/>
            <Image/>
            <Button Text="Choice A"
                VerticalOptions="EndAndExpand"
                x:Name="ChoiceAB"
                Clicked="ChoiceAB_Clicked"/>
            <Button Text="Choice B"
                    x:Name="ChoiceBB"
                    Clicked="ChoiceBB_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>